<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/toolbar_color</item>
        <item name="colorPrimaryDark">@color/toolbar_color</item>
        <!--toolbar标题颜色-->
        <!--<item name="android:textColorPrimary">@color/toolbar_title_color</item>-->

        <item name="android:colorAccent">@color/main_color</item>
        <item name="android:colorButtonNormal">@color/main_color</item>

        <item name="android:buttonStyle">@style/ButtonAppTheme</item>
        <item name="android:editTextStyle">@style/EditTextTheme</item>
    </style>

    <style name="ButtonAppTheme" parent="android:Widget.Material.Button">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:elevation">1dp</item>
        <item name="android:translationZ">1dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditTextTheme" parent="android:Widget.Material.EditText">
        <item name="android:textColor">@color/main_color</item>
    </style>

</resources>
